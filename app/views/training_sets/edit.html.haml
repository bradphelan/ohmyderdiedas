%div{ :data => {:role => "content" }}
  %div(data-role="collapsible-set")
    %div(data-role="collapsible")
      %h3 Edit Tags

      =form_for @set, :id=>"update-tags" do |f|
        = f.text_field :tags
        = f.submit
        

    %div(data-role="collapsible")
      %h3 Add Words To List
      %form{:action => new_word_training_set_path(:format=>:json), :id => "set-new-word", :method=>"post", :'data-remote' => true}
        %input{:name=>"authenticity_token", :value=>form_authenticity_token, :type=>"hidden"}
        %input{:name=>"training_set[word]", :type=>"text", :id=>"new_word_training_set"}
      
      %ul{:id=>"set_list",  :data => {:filter=>true, :role=> "listview", :inset=>'true' }}
        - @set.nouns(current_user).each do |noun|
          %li=noun

    %div(data-role="collapsible")
      %h3 Play
      %div{ :data => {:role => "content" }}
        %ul{:id=>"derdiedas",  :data => { :role=> "listview" }, 'data-url'=>random_word_training_set_path(@set)}
          %li(data-role="list-divider")
            %h3{:id=>"word"}
          %li.der der
          %li.die die
          %li.das das

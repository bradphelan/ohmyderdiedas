%html
  %head
    %title Oh My Der Die Das
    %link{:href => "http://code.jquery.com/mobile/1.0a1/jquery.mobile-1.0a1.min.css", :rel => "stylesheet"}/
    = javascript_include_tag :defaults
    %script{:src => "http://code.jquery.com/mobile/1.0a1/jquery.mobile-1.0a1.min.js"}
    = csrf_meta_tag
  %body
    %div{"data-role" => "page"}

      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}", :class => "ui-body ui-body-e"
    
      = yield
